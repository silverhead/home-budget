{% extends 'base.html.twig' %}

{% block title %}{{ 'account.list.title'|trans }}{% endblock %}

{% block body %}
    {{ include('common/page_header.html.twig', {'route_return': 'home', 'title': 'category.list.title'|trans}) }}
    <div class="row">
        <div class="col s12">
            <a href="{{ path('category_add') }}" class="btn btn-outline-success float-end me-3">{{ 'app.common.add_button'|trans }}</a>
            <table class="table highlight">
                <thead>
                <tr>
                    <th style="width:20%">{{ 'category.list.label'|trans }}</th>
                    <th style="width:20%">{{ 'category.list.account'|trans }}</th>
                    <th style="width:50%">{{ 'category.list.tags'|trans }}</th>
                    <th style="width:10%">{{ 'app.common.list.action'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.Label }}</td>
                        <td>{{ category.account.label }}</td>
                        <td>
                            {% for tag in category.tags %}
                                {% if loop.index0 > 0 %},{% endif %}
                                {{ tag.tagLabel }}
                            {% endfor %}
                        </td>
                        <td>
                            <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-warning"><i class="far fa-edit"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">{{ 'app.common.list.no_data' }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
