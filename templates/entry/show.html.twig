{% extends 'base.html.twig' %}

{% block title %}Entry{% endblock %}

{% block body %}
    <h1>Entry</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entry.id }}</td>
            </tr>
            <tr>
                <th>OperationNumber</th>
                <td>{{ entry.operationNumber }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ entry.label }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entry.description }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ entry.amount }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entry.date ? entry.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('entry_index') }}">back to list</a>

    <a href="{{ path('entry_edit', {'id': entry.id}) }}">edit</a>

    {{ include('entry/_delete_form.html.twig') }}
